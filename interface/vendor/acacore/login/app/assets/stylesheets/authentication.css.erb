/*
  *= require bootstrap.min
  *= require_self
*/

html {
	width: 100%;
	height: 100%;
}

body {
	height: 100%;
	background-image:url(<%= asset_path 'login/background.jpg' %>);
	background-repeat:no-repeat;
	background-position:top center;
	background-color:#657077;
}

h1 {
	color: white;
	
	-webkit-text-shadow: 1px 1px 4px gray;
	-moz-text-shadow: 1px 1px 4px gray;
	-ms-text-shadow: 1px 1px 4px gray;
	-o-text-shadow: 1px 1px 4px gray;
	text-shadow: 1px 1px 4px gray;
	
	margin-bottom:10px;
}

#admin_box {
	padding-top:40px;
	margin: 0px auto 0px auto;
	width:310px;
}

pre {
	padding-bottom: 0px;
}

table {
	margin-bottom: 0px;
	border: none;
}

table tr {
	border: none!important;
}

table td {
	border: none!important;
}

td#change-password {
	vertical-align: bottom;
}

label {
	float: none;
	width: auto;
}

input[type="text"], input[type="password"] {
	width: 12em;
}


