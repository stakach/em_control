
<%= form_tag login_path do %>
	<pre class="prettyprint">
		<table align="center"><tbody>
			<tr>
				<td><%= label_tag :username, t(:login_user) %></td>
				<td><%= text_field_tag :username, @username %></td>
			</tr>
			<tr>
				<td><%= label_tag :password, t(:login_password) %></td>
				<td><%= password_field_tag :password %></td>
			</tr>
			<tr>
				<td><%= submit_tag t(:login_button), :class => "btn primary", :name => '' %></td>
				<td id="change-password"><a href="#" onclick="$('form').attr('action', '<%= edit_path %>').submit(); return false;">Change Password</a></td>
			</tr>
		</tbody></table>
	</pre>
<% end %>
